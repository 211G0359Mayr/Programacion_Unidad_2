@model Programacion_Unidad_2.Models.ViewModels.CarreraViewModel
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@Model.Carrera</title>
    <link href="~/estilos.css" rel="stylesheet" />
</head>
<body>
    <main>
        <h1>
            <a class="btn" href="javascript: history.back()">&#x25c0; Regresar</a>
            @Model.Carrera
        </h1>

        <h2>@Model.Programa</h2>
        <h2>Total de créditos: @Model.CreditosTotales</h2>

        <section class="reticula">
            <table>
                <thead>
                    <tr>
                        @foreach (var semestre in Model.Semestres)
                        {
                            <th>@semestre.NumSemestre semestre</th>
                        }
                    </tr>
                </thead>
                <tr>
                    @foreach (var semestre in Model.Semestres)
                    {
                        <td>
                            @foreach (var materia in semestre.Materias)
                            {
                                <div class="materia">
                                    <span class="clave">@materia.Codigo</span>
                                    <span class="nombre">@materia.Titulo</span>
                                    <span class="tpc">@materia.Creditos-@materia.Practica-@materia.Teoria</span>
                                </div>
                            }
                        </td>
                    }
                </tr>
            </table>
        </section>
    </main>
</body>
</html>
